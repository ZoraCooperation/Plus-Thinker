<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_click_post_background"
    tools:context=".ClickPostActivity">
    <include
        android:id="@+id/clickPost_page_toolbar"
        layout="@layout/app_bar_layout">
    </include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/clickPost_page_toolbar"
        android:layout_above="@id/bannerLayout"
        android:id="@+id/clickPost_layout"
        android:scrollbars="none"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/post_imageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="5dp"
                android:gravity="center_horizontal"
                android:src="@drawable/ic_photo"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/post_image_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="5dp"
                android:text="@string/description"
                android:background="@drawable/inputs"
                android:ems="10"
                android:padding="15dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"
                tools:ignore="Autofill"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:id="@+id/bannerLayout"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_tool"
            android:id="@+id/edit_post"
            android:layout_gravity="center_vertical"
            tools:ignore="ContentDescription"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_trash_tool"
            android:id="@+id/delete_post"
            android:layout_marginHorizontal="50dp"
            android:layout_gravity="center_vertical"
            tools:ignore="ContentDescription"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_file_download"
            android:id="@+id/download"
            android:layout_gravity="center_vertical"
            tools:ignore="ContentDescription"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share_click_post"
            android:id="@+id/share"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center_vertical"
            tools:ignore="ContentDescription"
            android:layout_marginStart="40dp" />
    </LinearLayout>
</RelativeLayout>